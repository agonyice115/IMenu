<!-- 到店支付订单详情-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    <com.huassit.imenu.android.view.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
    <!-- 商家信息 -->
    <LinearLayout
        android:id="@+id/businesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/businesses_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/businesses_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="松和日本料理" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dimensional_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:id="@+id/dimensional_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/consumer_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="110dp">
      <TextView
          android:id="@+id/consumer_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="消费码为："/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/consumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="110dp">
        <TextView
            android:id="@+id/consumer_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000654389087002"/>
    </LinearLayout>
    <!-- 详细信息-->
    <LinearLayout
        android:id="@+id/detailed_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <ListView
            android:id="@+id/detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>
        </LinearLayout>
</RelativeLayout>
