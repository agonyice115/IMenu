<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:src="@drawable/go"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
               android:id="@+id/goImageView"/>

    <ImageView android:layout_width="80dp" android:layout_height="80dp"
               android:id="@+id/menuIcon"
               android:layout_marginTop="20dp"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="20dp"
               android:scaleType="fitXY"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_toLeftOf="@id/goImageView"
                  android:layout_toRightOf="@id/menuIcon"
                  android:layout_centerVertical="true"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/menuName"
                  android:textColor="#333333"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/menuPrice"
                  android:text="@string/search_result_menu_price"
                  android:textColor="@color/blue"
                  android:layout_marginTop="4dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/browse"
                  android:text="@string/search_result_menu_count"
                  android:gravity="center_vertical"
                  android:drawablePadding="4dp"
                  android:textColor="#555555"
                  android:id="@+id/menuCount"/>
    </LinearLayout>

</RelativeLayout>