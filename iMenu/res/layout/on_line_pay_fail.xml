<!--
            支付失败
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <com.huassit.imenu.android.view.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
    <!-- 支付失败   -->
    <LinearLayout
        android:id="@+id/pay_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pay_failed"
            android:paddingLeft="10dp"
            android:text="            支付购买失败!  "
            android:textSize="20dp" />
    </LinearLayout>

    <!-- 商家名称-->
    <LinearLayout
        android:id="@+id/shop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="140dp"
        >

        <ImageView
            android:id="@+id/shop_cart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/shopping_cart" />

        <TextView
	    android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="雕刻时光 (交大店) "
            android:textSize="20dp" />
    </LinearLayout>
    <!-- 订单号的标题 -->
    <LinearLayout
	android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="190dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/pay_icon" />

        <TextView
	    android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:drawableRight="@drawable/go"
            android:text="查看我的订单详情" />

        <Button
            android:id="@+id/title_enter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/go" />

    </LinearLayout>
    <!-- 两个按钮-->
    <LinearLayout
	android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">
        <Button
            android:id="@+id/pay_failure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:background="@drawable/red_btn"
            android:text="重新支付"
            />
        <Button
            android:id="@+id/continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/continueview"
            android:text="继续浏览"
            />
    </LinearLayout>
</RelativeLayout>


